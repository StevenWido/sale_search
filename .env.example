# Notification Settings
NOTIFICATION_METHOD=console  # Options: console, email
EMAIL_TO=your-email@example.com
EMAIL_FROM=alerts@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-password

# Scraping Settings
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36
REQUEST_TIMEOUT=30
REQUEST_DELAY=2  # Seconds between requests to be polite

# Schedule Settings
CHECK_INTERVAL_MINUTES=60  # How often to check for sales (default: 60 minutes)

# Database Settings
DATABASE_PATH=shoe_sales.db

# Filtering Settings
MIN_DISCOUNT_PERCENTAGE=10  # Only alert on sales with at least this discount
KEYWORDS=running,run,runner,trail,marathon,athletic  # Comma-separated keywords to look for
